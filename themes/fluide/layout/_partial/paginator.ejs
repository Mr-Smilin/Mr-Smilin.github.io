<% if (page.total > 1){ %>
  <nav aria-label="navigation">
    <span class="pagination" id="pagination">
      <%- paginator({
        prev_text: '<i class="iconfont icon-arrowleft"></i>',
        next_text: '<i class="iconfont icon-arrowright"></i>',
        mid_size: 2,
        escape: false
      }) %>
    </span>
  </nav>
  <% if(theme.scroll_down_arrow.scroll_after_turning_page){ %>
    <script type="text/javascript">$(".pagination a").each(function(){$(this)[0].href+="#board";})</script>
  <% } %>
<% } %>